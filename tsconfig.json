{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "types": ["@types/react"],
    "paths": {
      "@/*": ["./src/*"],
      "*.css": ["./src/styles/globals.css"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "sanity/**/*.ts",
    "sanity/**/*.tsx",
    "globals.d.ts"
  ],
  "exclude": ["node_modules"]
}
