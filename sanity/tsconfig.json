{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "jsx": "preserve",
    "allowImportingTsExtensions": true
  },
  "include": ["*.ts", "*.tsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
